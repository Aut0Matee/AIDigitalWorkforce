# AI Digital Workforce Environment Configuration
# Copy this file to .env and update with your actual values

# ====================
# Required API Keys
# ====================
# OpenAI API Key for GPT-4o-mini
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Tavily Search API Key for web research
# Get from: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# ====================
# Database Configuration
# ====================
# MySQL Settings
MYSQL_ROOT_PASSWORD=rootpassword123
MYSQL_DATABASE=ai_workforce
MYSQL_USER=ai_user
MYSQL_PASSWORD=aipassword123
MYSQL_PORT=3306

# ====================
# Application Settings
# ====================
# Security - Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production

# Debug Mode (set to false in production)
DEBUG=false

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ====================
# Service Ports
# ====================
# Backend API Port
BACKEND_PORT=8000

# Frontend Web Port
FRONTEND_PORT=80

# Adminer Database Management Port
ADMINER_PORT=8080

# ====================
# WebSocket Configuration
# ====================
# Ping interval in seconds
WS_PING_INTERVAL=25

# Ping timeout in seconds
WS_PING_TIMEOUT=60

# ====================
# CORS Settings
# ====================
# Allowed origins (JSON array format)
ALLOWED_ORIGINS=["http://localhost", "http://localhost:80", "http://localhost:3000"]